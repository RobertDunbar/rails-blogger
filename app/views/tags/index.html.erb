<h1>All Tags</h1>
<% if logged_in? %>
    <ul id="tags">
        <% @tags.each do |tag| %>
            <li>
                <%= link_to tag.name, tag_path(tag.id) %>
                <%= link_to "delete", tag_path(tag), method: :delete, data: {confirm: "Really delete the article?"} %>
            </li>
        <% end %>
    </ul>
<% end %>

<%= link_to "<< Back to Articles List", articles_path %>